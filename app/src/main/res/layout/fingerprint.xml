<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#558ef9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:1"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/register"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/register_fingerprint"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/validate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/validate_fingerprint"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:N"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/register2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/register_fingerprint"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/validate2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/validate_fingerprint"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/clear_flash"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_flash"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/calibration"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/calibration"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn1_my"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/import_finger"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/backRegister"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/back"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/background_dark" />
            </LinearLayout>

            <TextView
                android:id="@+id/upfail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/fingerprintImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>